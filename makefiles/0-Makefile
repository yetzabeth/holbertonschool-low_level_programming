# Compiler gcc flags
CFLAGS = -Wall -pedantic -Werror -Wextra -std=gnu89

# Compiler rules
all: school

school : main.o school.o
	gcc $(CFLAGS) -o school main.o school.o

main.o : main.c m.h
	gcc $(CFLAGS) -c main.c

school.o : school.c m.h
	gcc $(CFLAGS) -c school.c

.PHONY: clean
clean :
	rm -f *.o school
